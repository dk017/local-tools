{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$APP_LOCAL_DATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$TEMP/**"
        },
        {
          "path": "$APP_LOCAL_DATA/**"
        }
      ]
    },
    "core:path:default"
  ]
}